 /* REXX0027 TO ILLUSTRATE DO - END SEQUENCES */
 SALARY = 100
 SAY "PLEASE ENTER NAME (JOE) "
 PULL NAME
 IF NAME = "JOE"
 THEN DO /* NAME = JOE */
     SALARY = SALARY * 2
     SAY "DOUBLING JOE'S SALARY "
     SAY "NEW SALARY IS" SALARY
     END /* NAME = JOE */
 ELSE DO /* NAME <>  JOE */
     SALARY = SALARY - 1
     SAY "REDUCING SALARY BY ONE "
     SAY "NEW SALARY IS" SALARY
     END /* NAME <>  JOE */
