/* REXX0047  SUBROUTINE. PASS DATA TO IT                 */
/* SUBROUTINE PASSES BACK THE RESULT OF A CALCULATION    */
SALARY        = 1000
MULTIPLY_BY   = 10
CALL MYSUB SALARY MULTIPLY_BY
SAY "SUBROUTINE CALCULATED NEW SALARY AS" RESULT
EXIT  /* LOGICAL END OF PROGRAM (REQUIRED) */

 MYSUB: ARG SAL MULT
    SAY "IN SUBROUTINE: RECEIVED" SAL "AND" MULT
    RET_DATA = SAL * MULT
    SAY "IN SUBROUTINE: CALCULATED" RET_DATA
 RETURN RET_DATA /* LOGICAL END OF SUB. RETURNS CONTROL */
