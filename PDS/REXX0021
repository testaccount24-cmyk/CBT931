 /* REXX PROGRAM REXX0021 TO ILLUSTRATE SUBSTR FUNCTION */
 SAY SUBSTR("ABCD",1,2)      /* GIVES "AB" */
 SAY SUBSTR(1+2+3+4,3,1)     /* DOES  MATH ON THE STRING. */
                             /* RETURNS SPACE */
 SAY SUBSTR("1+2+3+4",3,1)   /* DOESN'T DO MATH ON THE STRING.*/
                             /* RETURNS "2" */
