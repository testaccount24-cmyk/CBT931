/* REXX0005 TO ILLUSTRATE REXX ARITHMETIC */

TOTAL = 1 + 1          /* ADDITION */
SAY TOTAL              /* 2 */

TOTAL = 1 - 1          /* SUBTRACTION */
SAY TOTAL              /* 0 */

TOTAL = 16 / 4         /* DIVISION */
SAY TOTAL              /* 4 */

TOTAL = 16 / 5         /* DIVISION */
SAY TOTAL              /* 3 */

REMAINDER = 16 // 5    /* REMAINDER */
SAY REMAINDER          /* 1 */

TOTAL = 4 ** 2         /* EXPONENTIATION */
SAY TOTAL              /* 16 */

/* DOESN'T WORK: FRACTIONAL EXPONENT
TOTAL = 4 ** 2.2       /* EXPONENTIATION */
SAY TOTAL
*/
