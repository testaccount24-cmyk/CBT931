/* CLST0029 TO ILLUSTRATE NESTED IF */
WRITE PLEASE ENTER NAME AND DEPARTMENT (JOE DEPT1 OR DEPT2)
SET SALARY = 100
READ NAME DEPARTMENT
IF &NAME = JOE THEN +
    DO /* NAME = JOE */
        IF &DEPARTMENT = DEPT1 THEN +
        DO /* DEPT 1 */
         SET SALARY = &SALARY * 2
        END /* DEPT 1 */
     IF &DEPARTMENT = DEPT2 THEN +
        DO /* DEPT 2 */
         SET SALARY = &SALARY * 3
        END /* DEPT 2 */
    END /* NAME = JOE */

WRITE NEW SALARY IS &SALARY

