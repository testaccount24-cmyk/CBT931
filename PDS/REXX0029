 /* REXX0029 TO ILLUSTRATE NESTED IF */
 SAY "PLEASE ENTER NAME AND DEPARTMENT (JOE DEPT1 OR DEPT2)"
 SALARY = 100
 PULL NAME DEPARTMENT
 IF NAME = "JOE" THEN
     DO /* NAME = JOE */
         IF DEPARTMENT = "DEPT1" THEN
         DO /* DEPT 1 */
          SALARY = SALARY * 2
         END /* DEPT 1 */
      IF DEPARTMENT = "DEPT2" THEN
         DO /* DEPT 2 */
          SALARY = SALARY * 3
         END /* DEPT 2 */
     END /* NAME = JOE */

 SAY "NEW SALARY IS" SALARY
