/* CLST0041 TO ILLUSTRATE ATTN ROUTINE */
SET &NULL =
ATTN +
  DO
    WRITE YOU HIT ATTN/PA1!
    WRITE DO YOU WANT TO CONTINUE OR STOP?
    WRITE ENTER STOP OR ANYTHING ELSE TO CONTINUE
    READ CS
    IF &CS EQ STOP THEN EXIT
    WRITE ENTER YOUR NAME NOW
    &NULL  /* REEXECUTE STATEMENT THAT WAS INTERRUPTED (READ) */
  END /* ATTN DO */

WRITE PLEASE ENTER YOUR NAME
READ NAME
WRITE THANK YOU, &NAME, FOR ENTERING YOUR NAME SUCCESSFULLY
