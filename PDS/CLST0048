/* CLST0048  SUBPROCEDURE. PASS DATA TO IT                   */
/* SUBPROCEDURE SHARES ONE VARIABLE WITH MAIN PART OF CLIST  */
/* USING NGLOBAL                                             */
SET SALARY        = 1000
SET MULTIPLY_BY   = 15
SYSCALL MYSUB &SALARY &MULTIPLY_BY
WRITE SUBPROCEDURE CALCULATED NEW SALARY AS &RET_DATA
EXIT  /* LOGICAL END OF PROGRAM (NOT REQUIRED) */

MYSUB: PROC 2 SAL MULT
   NGLOBAL RET_DATA
   WRITE IN SUBPROCEDURE: RECEIVED &SAL AND &MULT
   SET RET_DATA = &SAL * &MULT
   WRITE IN SUBPROCEDURE: CALCULATED &RET_DATA
END /* LOGICAL END OF THE SUBPROCEDURE. RETURNS CONTROL */

