/* CLST0002 TO ILLUSTRATE &STR */
SET NAME = JOE          /* NO LITERAL DELIMITERS NEEDED */

SET BAD_DATE = &SYSDATE /* WITHOUT &STR, DIVISION IS DONE */
WRITE &BAD_DATE         /* GIVES 0 */

SET GOOD_DATE = &STR(&SYSDATE) /* &STR NEEDED TO PREVENT DIVISION */
         /* TAKING PLACE DUE TO THE SLASHES RETURNED BY &SYSDATE */
WRITE &GOOD_DATE        /* GIVES DATE, CORRECTLY */



